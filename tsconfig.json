{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@artifacts": ["artifacts/*"],
      "@deploy": ["deploy/*"],
      "@deployments": ["deployments/*"],
      "@typechained": ["typechained/index"],
      "@utils": ["test/utils/index"],
      "@utils/*": ["test/utils/*"],
      "@e2e/*": ["test/e2e/*"],
      "@unit/*": ["test/unit/*"]
    }
  },
  "include": ["./scripts", "./deploy", "./test", "./tasks"],
  "files": ["./hardhat.config.ts"]
}
